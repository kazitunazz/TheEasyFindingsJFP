<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@drawable/background"
    tools:context=".BankandATM.atmservice">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="Bank and ATM"
            android:layout_marginBottom="15dp"
            android:textAlignment="center"
            android:background="#910f0f"
            android:textSize="25dp"
            android:textColor="#faf9f9"/>


        <Button
            android:id="@+id/bl"
             android:background="@drawable/buttonnewblue"
            android:layout_width="300dp"
            android:layout_gravity="center"
            android:layout_height="60dp"
            android:layout_marginBottom="20dp"
            android:text="Brac "
            android:textSize="22dp"/>
        <Button
             android:id="@+id/ebl"
            android:layout_width="300dp"
            android:layout_gravity="center"
            android:layout_height="60dp"
            android:background="@drawable/buttongreen"
            android:layout_marginBottom="20dp"
            android:text="Eastern Bank LTD"
            android:textSize="22dp" />

        <Button
            android:id="@+id/jbl"
            android:layout_height="60dp"
            android:layout_width="300dp"
            android:background="@drawable/buttonset"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:text="Janata BAnk"
            android:textSize="22dp"/>

        <Button
            android:id="@+id/tcb"
            android:layout_width="300dp"
            android:background="@drawable/buttonornge"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:text="The City Bank "
            android:textSize="22dp" />

        <Button
            android:id="@+id/mtbl"
            android:layout_width="300dp"
            android:background="@drawable/buttonvilet"
            android:layout_gravity="center"
            android:layout_height="60dp"
            android:layout_marginBottom="20dp"
            android:text="MUTUAL trust bank"
            android:textSize="22dp" />

        <Button
            android:id="@+id/ucbl"
            android:layout_width="300dp"
            android:background="@drawable/buttonset"
            android:layout_gravity="center"
            android:layout_height="60dp"
            android:layout_marginBottom="10dp"
            android:text="UCBL"
            android:textSize="22dp"/>




    </LinearLayout>



</ScrollView>