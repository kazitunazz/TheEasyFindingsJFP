<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".caccessories">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:background="#a70518"
            android:text="Computer Accessories"
            android:textAlignment="center"
            android:textColor="#f3fafbff"
            android:textSize="28dp" />

        <TextView
            android:id="@+id/showdata"
            android:layout_width="match_parent"
            android:layout_height="1252dp"
            android:layout_marginBottom="25dp"
            android:layout_marginTop="10dp"
            android:background="#f9f6f6"
            android:text=""
            android:textColor="#000"
            android:textSize="18dp"
             />


        <Button
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:background="@drawable/redbuttongo"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            android:textAlignment="center"
            android:text="   Computer Service"
            android:layout_marginBottom="25dp"
            android:textColor="#f9f5f5"
            android:onClick="Open"/>

        <Button
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:background="@drawable/redbuttongo"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:textAlignment="center"
            android:text="         LogiTech Computers"
            android:layout_marginBottom="25dp"
            android:textColor="#f9f5f5"
            android:onClick="Open1"/>

        <Button
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:background="@drawable/redbuttongo"
            android:textSize="18dp"
            android:layout_gravity="center"
            android:text="              Sony Rangs Computers"
            android:layout_marginBottom="25dp"
            android:textColor="#f9f5f5"
            android:onClick="Open2"/>
        <Button
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:background="@drawable/redbuttongo"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:text="Tech Valley"
            android:layout_marginBottom="25dp"
            android:textColor="#f9f5f5"
            android:onClick="Open3"/>
        <Button
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:background="@drawable/redbuttongo"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:layout_marginBottom="25dp"
            android:text="HP Pavilion"
            android:textColor="#f9f5f5"
            android:onClick="Open4"/>





    </LinearLayout>

</ScrollView>