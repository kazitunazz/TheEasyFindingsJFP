                android:background="#f95d5d"
                android:padding="35dp"
                android:src="@drawable/computer" />


            <ImageButton
                android:id="@+id/button11"
                android:layout_width="103dp"
                android:layout_height="129dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:background="#cfb5bb"
                android:padding="35dp"
                android:src="@drawable/handicrafts" />

            <ImageButton
                android:id="@+id/admin"
                android:layout_width="103dp"
                android:layout_height="129dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:background="#4013c9"
                android:padding="35dp"
                android:src="@drawable/logadmin" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="116dp"
                android:layout_height="match_parent"
                android:layout_below="@+id/button1"
                android:text="Computer  accessories"
                android:textAlignment="center"

                android:textColor="#fefeff"
                android:textSize="15dp" />


            <TextView
                android:layout_width="118dp"
                android:layout_height="match_parent"
                android:layout_below="@+id/button1"
                android:text="   Handicrafts"
                android:textColor="#fefeff"
                android:textSize="15dp" />

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/button1"

                android:text="Admin Login"
                android:layout_marginBottom="40dp"
                android:textAlignment="center"
                android:textColor="#fefeff"
                android:textSize="15dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="45dp"
                android:layout_marginBottom="25dp"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/list" />

            <Button
                android:id="@+id/myplan"
                android:layout_width="120dp"
                android:layout_height="45dp"
                android:layout_marginBottom="25dp"
                android:layout_marginTop="30dp"
                android:background="#ac2203"
                android:text="To DO List"
                android:textColor="#f9f5f5"
                android:textSize="18dp"
                android:textStyle="bold" />
        </LinearLayout>





</LinearLayout>



</ScrollView>