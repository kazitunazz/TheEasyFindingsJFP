<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Homedecor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="DETAILS"
            android:textAlignment="center"
            android:textSize="25sp"
            android:textColor="#fcfafa"
            android:layout_marginBottom="10dp"
            android:background="#0c1286"/>

        <TextView
            android:id="@+id/showdata"
            android:layout_width="match_parent"
            android:layout_height="831dp"
            android:textColor="#000"
            android:layout_marginBottom="25dp"
            android:layout_marginTop="10dp"
            android:background="#f9f6f6"
            android:text=""
            android:textSize="18dp" />


        <Button
            android:layout_width="350dp"
            android:layout_height="50dp"
           android:background="@drawable/redbuttongo"
            android:layout_gravity="center"

            android:layout_marginTop="20dp"
            android:textSize="16dp"
            android:textAlignment="center"
            android:text="              International Homeware"
            android:layout_marginBottom="25dp"
            android:textColor="#f9f5f5"
            android:onClick="Open"/>

        <Button
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:background="@drawable/redbuttongo"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:text="           Classical HomeTex"
            android:layout_marginBottom="25dp"
            android:textColor="#f9f5f5"
            android:onClick="Open1"/>
        <Button
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:background="@drawable/redbuttongo"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:text="           BanglaShoppers"
            android:textColor="#f9f5f5"
            android:onClick="Open2"/>




    </LinearLayout>

</ScrollView>