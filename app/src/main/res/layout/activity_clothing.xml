<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".ClothingRelated.clothing">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:background="#931419"
            android:text="SHOP INVENTORY"
            android:textAlignment="center"
            android:textColor="#f3f4f6f7"
            android:textSize="25dp" />

        <Button
            android:id="@+id/arong"
            android:layout_width="300dp"
            android:background="@drawable/buttonnewblue"
            android:layout_gravity="center"
            android:layout_height="60dp"

            android:layout_marginBottom="10dp"
            android:text="AArong"
            android:textSize="22dp" />

        <Button
            android:id="@+id/anjans"
            android:layout_width="300dp"
            android:background="@drawable/buttongreen"
            android:layout_gravity="center"
            android:layout_height="60dp"

            android:layout_marginBottom="10dp"
            android:text="Anjan's "
            android:textSize="22dp"/>

        <Button
            android:id="@+id/artisan"
            android:layout_width="300dp"
            android:background="@drawable/buttonornge"
            android:layout_gravity="center"

            android:layout_height="60dp"
            android:layout_marginBottom="10dp"
            android:text="ARTISAN"
            android:textSize="22dp"/>

        <Button
            android:layout_width="300dp"
            android:id="@+id/infinity"
            android:background="@drawable/buttonnewblue"
            android:layout_gravity="center"
            android:layout_height="60dp"
            android:layout_marginBottom="10dp"
            android:text="infinity"
            android:textSize="22dp"/>
        <Button
            android:id="@+id/easy"
            android:layout_width="300dp"
            android:background="@drawable/buttongreen"
            android:layout_gravity="center"
            android:layout_height="60dp"


            android:layout_marginBottom="10dp"
            android:text="EASY"
            android:textSize="22dp"/>
        <Button
            android:id="@+id/ecstesy"
            android:layout_width="300dp"
            android:background="@drawable/buttonornge"
            android:layout_gravity="center"
            android:layout_height="60dp"

            android:layout_marginBottom="10dp"
            android:text="ECSTESY "
            android:textSize="22dp"/>


        <Button
            android:id="@+id/illiyeen"
            android:layout_width="300dp"
            android:background="@drawable/buttonvilet"
            android:layout_gravity="center"


            android:layout_height="60dp"
            android:layout_marginBottom="10dp"
            android:text="ILLIYEEN "
            android:textSize="22dp"/>

    </LinearLayout>

</ScrollView>